<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/friend_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Platform"
        app:layout_constraintBottom_toTopOf="@+id/friend_Handlename"
        app:layout_constraintEnd_toStartOf="@+id/friend_Handlename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friend_Handlename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HandleName"
        app:layout_constraintBottom_toTopOf="@+id/friend_Rating"
        app:layout_constraintEnd_toStartOf="@+id/friend_Rating"
        app:layout_constraintStart_toEndOf="@+id/friend_platform"
        app:layout_constraintTop_toBottomOf="@+id/friend_platform"
        />

    <TextView
        android:id="@+id/friend_Rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wait.."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friend_Handlename"
        app:layout_constraintTop_toBottomOf="@+id/friend_Handlename"/>

</androidx.constraintlayout.widget.ConstraintLayout>